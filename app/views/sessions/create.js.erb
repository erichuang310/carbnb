$("#login-form").on("ajax:success", function(e, data, status, xhr) {
  $("#login-modal").modal("hide");
  $("nav.navbar").html("<%= escape_javascript(render(:partial => 'home/navbar')) %>");
});

$("#login-form").on("ajax:error", function(e, xhr, status, error) {
  $("#login-modal .modal-body").html("                                      \
    <%= escape_javascript(                                                  \
      render partial: 'authentication/form', locals: { type: 'login'}       \
    ) %>                                                                    \
  ");
});
