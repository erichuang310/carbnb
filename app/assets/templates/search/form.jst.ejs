<form>
  <!-- dates -->
  <div class="row row-offset-6">
    <div class="col-xs-3">
      <label>Dates</label>
    </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-6">
          <input
            type="text"
            class="date-picker form-control"
            placeholder="Start Date"
            name="start_date">
        </div>
        <div class="col-xs-6">
          <input
            type="text"
            class="date-picker form-control"
            placeholder="End Date"
            name="end_date">
        </div>
      </div>
    </div>
  </div>

  <hr>

  <!-- car type -->
  <div class="row row-offset-6">
      <div class="col-xs-3">
        <label>Car Type</label>
      </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-3">
          <label class="checkbox-inline">
            <input
              type="checkbox"
              name="car_type[]"
              value="sport">
              Sport
          </label>
        </div>
        <div class="col-xs-3">
          <label class="checkbox-inline">
            <input
              type="checkbox"
              name="car_type[]"
              value="economy">Economy
          </label>
        </div>
        <div class="col-xs-3">
          <label class="checkbox-inline">
            <input
              type="checkbox"
              name="car_type[]"
              value="luxury">
              Luxury
          </label>
        </div>
        <div class="col-xs-3">
          <label class="checkbox-inline">
          <input
            type="checkbox"
            name="car_type[]"
            value="utility">
            Utility
          </label>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <!-- car type -->
  <div class="row row-offset-6">
    <div class="col-xs-3">
      <label>Day Rate</label>
    </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-1 text-center" id="rate-min">
          $50
        </div>

        <div class="col-xs-9">
          <input
            id="rate-range"
            name="rate_range"
            data-slider-tooltip="hide"
            type="text"
            value=""
            data-slider-min="50"
            data-slider-max="500"
            data-slider-step="5"
            data-slider-value="[50,500]"
            style="width:100%;"/>
        </div>

        <div class="col-xs-1 text-center" id="rate-max">
          $500
        </div>
      </div>
    </div>
  </div>
  <div class="row row-offset-6">
    <div class="col-xs-12">
      <input
        class="form-control"
        type="submit"
        value="Find me my motha fucking car!">
    </div>
  </div>
<form>

<script>
  $(function() {
    var slider = $("#rate-range").slider({});
    slider.on("slide", function(event, ui) {
      var min = event.value[0];
      var max = event.value[1];
      $("#rate-min").html("$" + min);
      $("#rate-max").html("$" + max);
    });


    $(".date-picker").datepicker({ minDate: 0 });
  });
</script>
